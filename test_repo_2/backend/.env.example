# Application Configuration
NODE_ENV=development
PORT=3002
HOST=0.0.0.0

# Database Configuration - HARDCODED CREDENTIALS
DB_HOST=localhost
DB_PORT=27017
DB_NAME=ecommerce_products
DB_USERNAME=product_user
DB_PASSWORD=product_secret_123  # INSECURE PASSWORD
MONGO_URI=mongodb://product_user:product_secret_123@localhost:27017/ecommerce_products

# PostgreSQL for User Service
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ecommerce_users
POSTGRES_USER=user_service
POSTGRES_PASSWORD=postgres123  # WEAK PASSWORD

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_123  # HARDCODED
# REDIS_USERNAME=  # Missing Redis 6+ username support

# JWT Configuration - SECURITY ISSUES
JWT_SECRET=my_super_secret_key_12345  # WEAK SECRET
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=refresh_secret_key_67890  # ANOTHER WEAK SECRET
JWT_REFRESH_EXPIRATION=7d

# API Keys - EXPOSED SECRETS
API_KEY=sk-1234567890abcdef1234567890abcdef  # FAKE BUT REALISTIC
STRIPE_SECRET_KEY=sk_test_1234567890abcdef1234567890abcdef
STRIPE_PUBLIC_KEY=pk_test_1234567890abcdef1234567890abcdef

# External Services
EMAIL_SERVICE_URL=http://localhost:3004/api/email
NOTIFICATION_SERVICE_URL=http://localhost:3005/api/notifications
PAYMENT_SERVICE_URL=http://localhost:3006/api/payments

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/product-service.log
# LOG_FORMAT=  # Missing log format configuration

# CORS Configuration
CORS_ORIGIN=*  # TOO PERMISSIVE
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate Limiting
RATE_LIMIT_WINDOW=15  # 15 minutes
RATE_LIMIT_MAX=100    # requests per window
# RATE_LIMIT_SKIP_SUCCESSFUL=  # Missing configuration

# File Upload
UPLOAD_MAX_SIZE=10485760  # 10MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
UPLOAD_DESTINATION=./uploads
# UPLOAD_S3_BUCKET=  # Missing S3 configuration for production

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics
# PROMETHEUS_GATEWAY_URL=  # Missing Prometheus configuration

# Security
HELMET_ENABLED=true
# SECURITY_HEADERS=  # Missing security headers configuration
# CSP_POLICY=  # Missing Content Security Policy

# Cache Configuration
CACHE_TTL=3600  # 1 hour
CACHE_MAX_KEYS=1000
# CACHE_STRATEGY=  # Missing cache strategy

# Database Connection Pool
DB_CONNECTION_POOL_MIN=2
DB_CONNECTION_POOL_MAX=10
# DB_CONNECTION_TIMEOUT=  # Missing timeout configuration

# Feature Flags
FEATURE_RECOMMENDATIONS=true
FEATURE_REVIEWS=true
FEATURE_INVENTORY_TRACKING=false
# FEATURE_ANALYTICS=  # Missing feature flag

# Third-party Integrations
# ELASTICSEARCH_URL=  # Missing search configuration
# RABBITMQ_URL=  # Missing message queue configuration
# KAFKA_BROKERS=  # Missing Kafka configuration

# Development
DEBUG=product-service:*
# HOT_RELOAD=  # Missing hot reload configuration

# Production overrides (these should be in .env.production)
# SSL_ENABLED=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# MISSING CRITICAL VARIABLES:
# - ENCRYPTION_KEY for data encryption
# - ADMIN_EMAIL for system notifications
# - BACKUP_SCHEDULE for automated backups
# - ERROR_REPORTING_URL for error tracking
# - CDN_URL for static assets
